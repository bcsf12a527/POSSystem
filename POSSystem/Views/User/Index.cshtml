@{
    ViewBag.Title = "User Setup";
}
<script src="~/Scripts/Angular/User/User.js" type="text/javascript"></script>
<div ng-controller="UserController" id="DivUserManagement">
    <div class="row">
        <div class="col-sm-12">
            <a data-toggle="modal" ng-click="UserShowModal()" class="pull-right btn btn-default btn-sm"><i class="icon-add"></i> Add User</a>
        </div>
    </div>
    <div class="panel panel-flat border-top-xlg border-top-warning mt-10">
        <div class="panel-body">
            <form>
                <div class="row">
                    <div class="col-sm-2">
                        Search
                        <input type="text" ng-model="userSearch.Search" class="form-control" />
                    </div>
                    <div class="col-sm-2">
                        Status
                        <select ng-model="userSearch.Active" class="form-control">
                            <option value="">All</option>
                            <option value="1">Active</option>
                            <option value="0">In-Active</option>
                        </select>

                    </div>
                    <div class="col-sm-1">
                        <button type="submit" ng-click="UserFetch()" class="btn bg-pink btn-sm mt-20">
                            <i class="icon-search4"></i>
                            <span class="ladda-label">Search</span>
                            <span class="ladda-spinner"></span>
                        </button>
                    </div>

                </div>
            </form>
        </div>

    </div>
    <div class="panel panel-flat">
        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer table-responsive">
            <table id="UserTable" class="table datatable-show-all dataTable no-footer">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>CNIC</th>
                        <th>City</th>
                        <th>CreateBy</th>
                        <th>CreateDate</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

            </table>

        </div>
    </div>
    @Html.Partial("_UserForm")
</div>