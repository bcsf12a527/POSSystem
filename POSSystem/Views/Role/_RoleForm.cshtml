@{
    ViewBag.Title = "Role Setup Form";
}

<!-- 2 columns form in Bootstrap model -->
<div id="RoleModal" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-pink">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Role Details</h4>
            </div>
            <div class="modal-body clearfix">
                <form name="RoleForm" ng-submit="SubmitForm()">
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Enter Role Name -->
                            <div class="form-group">
                                <label>Role Name<span style="color:red">*</span></label>
                                <input type="text" ng-model="role.Name" class="form-control" placeholder="Enter Role Name" maxlength="50" required>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button id="Save" name="Save" type="submit" class="btn btn-success btn-sm"><i class="icon-box-add"></i> Save</button>
                        <button class="btn btn-default btn-sm" ng-click="RoleCloseModal()"><i class="icon-cross3"></i> Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /2 columns form-->
